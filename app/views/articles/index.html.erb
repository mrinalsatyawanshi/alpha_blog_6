<h1>This is the Article index page</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
    <% 
        @articles.each do |article_object|
            %>
        <tr>
        <td> <%= article_object.title %> </td>
        <td> <%= article_object.description %></td>
        <td> <%= link_to 'Show', article_path(article_object) %> </td>
        <td> <%= link_to 'Edit', edit_article_path(article_object) %> </td>
        <%# method will not work here it is new in rails 7 %>
        <td> <%= link_to 'Delete', article_path(article_object), data: {confirm:"Are you sure?"}, method: :delete %> </td>
        </tr>
        <%
        end
        %>
    </tbody>
</table>
<p>
    <%= link_to 'Create new article', new_article_path %>
</p>