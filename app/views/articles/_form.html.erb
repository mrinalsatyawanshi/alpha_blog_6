<%# here scope is the current model we are working with and if we want our form to work as https 
rather than ajax then we have to use local %>

<% if @article.errors.any? %>
        <p>You have got some errors</p>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>

    <p>
        <%= f.label :title %> <br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %> <br>
        <%= f.text_area :description %>
    </p>

    <p>
        <%= f.submit %>
    </p>


<% end %>